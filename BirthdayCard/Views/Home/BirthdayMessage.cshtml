@model BirthdayCard.Models.BirthdayCard

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/styles.css" />
    <title>BirthdayMessage</title>
</head>

@{
    Layout = null;
}


<link href="~/Content/bootstrap.css" rel="stylesheet" />
<style>
    .btn a {
        color: white;
        text-decoration: none;
    }

    body {
        background-color: #f1f1f1;
    }
</style>

<!DOCTYPE html>


@Html.ValidationSummary()

@using (Html.BeginForm())
{
    if (this.Model == null || this.Model.Complete == false)
    {
        <p>From: @Html.TextBoxFor(t => t.From)</p>
        <p>To: @Html.TextBoxFor(t => t.To)</p>
        <p>Message: @Html.TextBoxFor(t => t.Message)</p>

        <input type="submit" value="Send Card" />
    }
    else
    {
        <label>Birthday Card Sent</label>
        <p>From: @Model.From</p>
        <p>To: @Model.To</p>
        <p>Message: @Model.Message</p>
    }
}
